<?xml version="1.0" encoding="utf-8"?>
<!-- Represents one day's card containing a header and a vertical list of POIs (RecyclerView for nested items) -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Day header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/dayNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/daySummaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • 2 places • 4.5h • ₹1250"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Inner RecyclerView for this day's POIs (adapter should bind to R.id.poisRecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/poisRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            tools:listitem="@layout/item_poi" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
