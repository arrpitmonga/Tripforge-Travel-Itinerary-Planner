<?xml version="1.0" encoding="utf-8"?>
<!-- item_trip.xml
     Single trip row for Old Trips list.
     Uses MaterialCardView + ConstraintLayout.
     Uses simple text action buttons to avoid missing drawable/string issues.
-->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trip_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Left: Trip title & details -->
        <LinearLayout
            android:id="@+id/trip_text_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/action_group">

            <TextView
                android:id="@+id/tripDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip to Pune"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tripDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 days â€¢ Moderate"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/trip_meta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created: 2025-10-26"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
                
            <TextView
                android:id="@+id/trip_poi_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Places to visit: "
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"/>

        </LinearLayout>

        <!-- Right: action group (date and buttons) -->
        <LinearLayout
            android:id="@+id/action_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26 Oct"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <!-- Row for action buttons (text-based to avoid missing icons) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">



                <TextView
                    android:id="@+id/btn_edit"
                    android:layout_width="48dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp" />

                <TextView
                    android:id="@+id/btn_delete"
                    android:layout_width="56dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
